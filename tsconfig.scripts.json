{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~~/*": ["./*"],
      "~/*": ["./app/*"]
    }
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist", ".nuxt"]
}
